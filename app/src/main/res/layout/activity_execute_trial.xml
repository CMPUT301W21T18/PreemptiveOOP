<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/TextView_title_ExecuteExperiment"
        android:layout_width="411dp"
        android:layout_height="76dp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="Execute Experiment"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/TextView_description_ExecuteExperiment"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/box_selector"
        android:hint="Trial results..."
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TextView_title_ExecuteExperiment" />

    <EditText
        android:id="@+id/EditText_Input_Counts"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginTop="56dp"
        android:background="@drawable/box_selector"
        android:ems="10"
        android:hint="Number of Counts:"
        android:inputType="numberSigned"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TextView_description_ExecuteExperiment" />

    <Button
        android:id="@+id/Button_binomialTrial_Success"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="376dp"
        android:layout_marginBottom="121dp"
        android:text="Success"
        android:textColor="#FFFFFF"
        android:background="@drawable/round_button"
        android:backgroundTint="#42403E"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/Button_binomialTrial_Failure"
        app:layout_constraintHorizontal_bias="0.187"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TextView_description_ExecuteExperiment" />

    <Button
        android:id="@+id/Button_binomialTrial_Failure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="128dp"
        android:layout_marginLeft="128dp"
        android:layout_marginTop="67dp"
        android:layout_marginEnd="35dp"
        android:textColor="#FFFFFF"
        android:layout_marginRight="35dp"
        android:layout_marginBottom="35dp"
        android:backgroundTint="#42403E"
        android:text="Failure"
        android:background="@drawable/round_button"
        app:layout_constraintBottom_toTopOf="@+id/Button_Record"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/Button_binomialTrial_Success"
        app:layout_constraintTop_toBottomOf="@+id/EditText_Input_Measurement" />

    <EditText
        android:id="@+id/EditText_Input_NonNegativeCounts"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginTop="156dp"
        android:ems="10"
        android:hint="NonNegative Counts:"
        android:background="@drawable/box_selector"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TextView_description_ExecuteExperiment" />

    <EditText
        android:id="@+id/EditText_Input_Measurement"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginTop="264dp"
        android:hint="Enter Measurement:"
        android:background="@drawable/box_selector"
        android:inputType="numberDecimal|numberSigned"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TextView_description_ExecuteExperiment" />

    <Button
        android:id="@+id/Button_Record"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="149dp"
        android:layout_marginBottom="39dp"
        android:text="Record"
        android:background="@drawable/round_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        android:textColor="#FFFFFF"
        android:backgroundTint="#42403E"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/EditText_Input_Measurement" />


</androidx.constraintlayout.widget.ConstraintLayout>