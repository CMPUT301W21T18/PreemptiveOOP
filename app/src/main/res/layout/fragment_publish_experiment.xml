<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/Button_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:text="New Experiment for: " />

    <RadioGroup
        android:id="@+id/RadioGroup_expType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <RadioButton
            android:id="@+id/RadioButton_binomial"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Binomial" />

        <RadioButton
            android:id="@+id/RadioButton_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Count" />

        <RadioButton
            android:id="@+id/RadioButton_measurement"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Measurement" />

        <RadioButton
            android:id="@+id/RadioButton_nonnegative"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="NonNegative" />
    </RadioGroup>

    <EditText
        android:id="@+id/EditText_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Experiment Description" />

    <EditText
        android:id="@+id/EditText_minNumOfTrials"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Min. Number of Trials"
        android:inputType="number" />

    <Button
        android:id="@+id/Button_pickLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pick a Region" />

    <CheckBox
        android:id="@+id/CheckBox_requireLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Require Location for Trials" />
</LinearLayout>