<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg_nologo">

    <TextView
        android:id="@+id/tv_exp_stat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="252dp"
        android:fontFamily="@font/alfa_slab_one"
        android:gravity="center"
        android:text="Experiment Statistics"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="356dp"
        android:layout_height="44dp"
        android:layout_marginBottom="300dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_exp_stat">

        <TextView
            android:layout_width="114dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="QUARTILES"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_quartiles"
            android:layout_width="240dp"
            android:layout_height="match_parent"
            android:gravity="center|left"
            android:text="123" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="356dp"
        android:layout_height="44dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <TextView
            android:layout_width="114dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="MEDIAN"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_median"
            android:layout_width="240dp"
            android:layout_height="match_parent"
            android:gravity="center|left"
            android:text="123" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="356dp"
        android:layout_height="44dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2">

        <TextView
            android:layout_width="114dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="MEAN"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_mean"
            android:layout_width="240dp"
            android:layout_height="match_parent"
            android:gravity="center|left"
            android:text="123" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="356dp"
        android:layout_height="44dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3">

        <TextView
            android:layout_width="114dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="STDEV"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_stdev"
            android:layout_width="240dp"
            android:layout_height="match_parent"
            android:gravity="center|left"
            android:text="123" />

    </LinearLayout>

    <Button
        android:id="@+id/Button_histogram"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:background="@drawable/round_button"
        android:backgroundTint="@color/light_Grey"
        android:text="View Histogram"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/Button_timePlot"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/Button_timePlot"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:background="@drawable/round_button"
        android:backgroundTint="@color/light_Grey"
        android:text="View Time Plot"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>