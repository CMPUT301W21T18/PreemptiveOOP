<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/user_profile_userName"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="15dp"
        android:text="  Hello,USERNAME"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/user_profile_displayUserInfo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/et_user_profile_changeName"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginStart="21dp"
        android:layout_marginLeft="21dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="57dp"
        android:background="@drawable/box_selector"
        android:ems="10"
        android:hint="  Give a new user name"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/et_userProfile_updateEmailAddr"
        app:layout_constraintEnd_toStartOf="@+id/bt_userProfile_updateUserName"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/bt_userProfile_updateUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="360dp"
        android:layout_marginEnd="27dp"
        android:layout_marginRight="27dp"
        android:layout_marginBottom="57dp"
        android:background="@drawable/round_button"
        android:backgroundTint="#42403E"
        android:text="UPDATE"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/bt_user_profile_updateEmail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/et_user_profile_changeName"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/et_userProfile_updateEmailAddr"
        android:layout_width="250dp"

        android:layout_height="50dp"
        android:layout_marginStart="21dp"
        android:layout_marginLeft="21dp"
        android:layout_marginTop="57dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/box_selector"
        android:ems="10"
        android:hint="  Update email addr"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toStartOf="@+id/bt_user_profile_updateEmail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_user_profile_changeName" />

    <Button
        android:id="@+id/bt_user_profile_updateEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="57dp"
        android:layout_marginEnd="27dp"
        android:layout_marginRight="27dp"
        android:background="@drawable/round_button"
        android:backgroundTint="#42403E"
        android:text="UPDATE"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/et_userProfile_updateEmailAddr"
        app:layout_constraintTop_toBottomOf="@+id/bt_userProfile_updateUserName" />

    <TextView
        android:id="@+id/user_profile_displayUserInfo"
        android:layout_width="376dp"
        android:layout_height="138dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="19dp"
        android:layout_marginRight="19dp"
        android:layout_marginBottom="140dp"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/et_user_profile_changeName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/user_profile_userName" />


</androidx.constraintlayout.widget.ConstraintLayout>