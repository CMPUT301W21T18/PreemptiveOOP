<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/loginbg"
    android:orientation="vertical">

    <TextView
        android:id="@+id/TextView_welcome"
        android:layout_width="283dp"
        android:layout_height="36dp"
        android:layout_marginStart="80dp"
        android:layout_marginLeft="80dp"
        android:layout_marginBottom="16dp"
        android:text="Welcome back"
        android:textColor="#302E2E"
        android:textColorHighlight="#FFFFFF"
        android:textColorHint="#6A676A"
        android:textColorLink="#FFFFFF"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/EditText_username"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/EditText_username"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_marginTop="400dp"
        android:background="@drawable/login_register_user_input"
        android:drawableLeft="@drawable/ic_action_name_loginadp"
        android:hint="Username"
        android:editable="false"
        android:padding="0dp"
        android:textColor="#212122"
        android:textColorHighlight="#F6F3F3"
        android:textColorHint="#7A7070"
        android:textColorLink="#F6F5F5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/Button_login"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:background="@drawable/round_button"
        android:onClick="btLoginOnClick"
        android:text="Login"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        app:backgroundTint="#42403E"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/Button_register"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/round_button"
        android:cursorVisible="false"
        android:onClick="btRegisterOnClick"
        android:text="Register"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="#FAF7F7"
        android:textColorHighlight="#FFFFFF"
        android:textStyle="bold"
        app:backgroundTint="#42403E"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Button_login"
        app:layout_constraintVertical_bias="0.113"
        android:visibility="gone" />


</androidx.constraintlayout.widget.ConstraintLayout>